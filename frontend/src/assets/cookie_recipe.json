    "method": [
        {
            "section": 1,
            "time": {
                "value": 10,
                "unit": "minute"
            },
            "steps": [
                {
                    "step": 1,
                    "description": "Brown butter in a saucepan. Set aside to cool in fridge for at least 1 hour, or until solid."
                }
            ]
        },
        {
            "section": 2,
            "time": {
                "value": 20,
                "unit": "minute"
            },
            "steps": [
                {
                    "step": 1,
                    "description": "Combine butter and sugar in the bowl of a stand mixer. Mix well to combine, until a nougat-like texture is achieved."
                },
                {
                    "step": 2,
                    "description": "Add COLD eggs, one at a time, to the butter/sugar mixture. Mix well to combine."
                },
                {
                    "step": 3,
                    "description": "Add vanilla to the mixture and mix well."
                },
                {
                    "step": 4,
                    "description": "In a separate bowl, whisk flour, salt, baking soda, and cinnamon."
                },
                {
                    "step": 5,
                    "description": "Add half of dry ingredient mixture to the wet ingredients and mix until everything is just combined. Then, add the rest of the dry ingredients."
                },
                {
                    "step": 6,
                    "description": "Remove bowl from mixer and add chocolate chips and chopped walnuts. Stir well to incorporate."
                },
                {
                    "step": 7,
                    "description": "Refrigerate dough for 2 hours or up to 2 days."
                }
            ]
        },
        {
            "section": 3,
            "time": {
                "value": 20,
                "unit": "minute"
            },
            "steps": [
                {
                    "step": 1,
                    "description": "Preheat oven to 350\u00b0F"
                },
                {
                    "step": 2,
                    "description": "Roll cookie down into balls, then crack in half and set on cookie sheet."
                },
                {
                    "step": 3,
                    "description": "Bake cookies for 12-17 minutes or until they've reached your preferred level of doneness. Top with flaky sea salt."
                }
            ]
        }
